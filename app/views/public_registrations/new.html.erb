<div class="flex justify-center items-center px-4 py-12 min-h-screen bg-gray-50 sm:px-6 lg:px-8">
  <div class="space-y-8 w-full max-w-2xl">
    <div>
      <h2 class="mt-6 text-3xl font-extrabold text-center text-gray-900">
        Patient Registration
      </h2>
      <p class="mt-2 text-sm text-center text-gray-600">
        Fill out the form below to get started with your telehealth consultation
      </p>
    </div>

    <div class="bg-white rounded-lg shadow">
      <div class="px-4 py-5 sm:p-6">
        <%= form_with model: @patient, url: patient_application_path, method: :post, local: true, class: "space-y-6" do |f| %>
          <% if @patient.errors.any? %>
            <div class="px-4 py-3 text-red-700 bg-red-100 rounded border border-red-400">
              <h3 class="font-bold">Please correct the following errors:</h3>
              <ul class="mt-2 ml-4 list-disc">
                <% @patient.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Personal Information -->
          <div class="pb-6 border-b border-gray-200">
            <h3 class="mb-4 text-lg font-medium text-gray-900">Personal Information</h3>

            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
              <div>
                <%= f.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.text_field :first_name, required: true, class: "block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
                </div>
              </div>

              <div>
                <%= f.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.text_field :last_name, required: true, class: "block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
                </div>
              </div>
            </div>

            <div class="mt-6">
              <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.email_field :email, required: true, class: "block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
              </div>
            </div>

            <div class="mt-6">
              <%= f.label :phone, "Phone Number", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.telephone_field :phone, required: true, placeholder: "1234567890", class: "block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
              </div>
              <p class="mt-1 text-xs text-gray-500">Enter 10-15 digits, numbers only</p>
            </div>

            <div class="mt-6">
              <%= f.label :date_of_birth, "Date of Birth", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.date_field :date_of_birth, required: true, class: "block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
              </div>
            </div>
          </div>

          <!-- Health Questions -->
          <div class="pt-6">
            <h3 class="mb-4 text-lg font-medium text-gray-900">Health Information</h3>

            <div class="space-y-6">
              <div>
                <%= f.label :health_question_one, "Health Question 1", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.text_area :health_question_one, rows: 3, class: "block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
                </div>
              </div>

              <div>
                <%= f.label :health_question_two, "Health Question 2", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.text_area :health_question_two, rows: 3, class: "block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
                </div>
              </div>

              <div>
                <%= f.label :health_question_three, "Health Question 3", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.text_area :health_question_three, rows: 3, class: "block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
                </div>
              </div>
            </div>
          </div>

          <div class="pt-6">
            <%= f.submit "Submit Registration", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
