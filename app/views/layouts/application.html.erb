<!DOCTYPE html>
<html>
  <head>
    <title>Telehealth CRM</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <!-- Flash Messages -->
    <% if notice %>
      <div class="px-4 py-3 mx-4 mt-4 mb-4 text-green-700 bg-green-100 rounded border border-green-400" role="alert">
        <span class="block sm:inline"><%= notice %></span>
      </div>
    <% end %>
    <% if alert %>
      <div class="px-4 py-3 mx-4 mt-4 mb-4 text-red-700 bg-red-100 rounded border border-red-400" role="alert">
        <span class="block sm:inline"><%= alert %></span>
      </div>
    <% end %>

    <% if user_signed_in? %>
      <!-- Navigation -->
      <nav class="bg-white shadow-lg">
        <div class="px-4 mx-auto max-w-7xl">
          <div class="flex justify-between h-16">
            <div class="flex">
              <!-- Logo -->
              <div class="flex flex-shrink-0 items-center">
                <%= link_to root_path, class: "text-xl font-bold text-gray-800" do %>
                  Telehealth CRM
                <% end %>
              </div>

              <!-- Navigation Links -->
              <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                <%= link_to "Dashboard", root_path,
                    class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>

                     <% if current_user.admin? %>
                       <%= link_to "Patients", patients_path,
                           class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
                <%= link_to "Tasks", tasks_path,
                    class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
                     <% end %>

                <% if current_user.patient? %>
                  <%= link_to "Messages", "#",
                      class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
                  <%= link_to "My Tasks", "#",
                      class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
                <% end %>
              </div>
            </div>

            <!-- User Menu -->
            <div class="hidden sm:ml-6 sm:flex sm:items-center">
              <div class="relative ml-3">
                <div class="flex items-center space-x-4">
                  <span class="text-sm text-gray-700">
                    <%= current_user.email %> (<%= current_user.role.capitalize %>)
                  </span>
                  <%= link_to "Sign Out", destroy_user_session_path,
                      method: :delete,
                      class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded text-sm" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <!-- Main Content -->
    <main class="<%= 'max-w-7xl mx-auto py-6 sm:px-6 lg:px-8' if user_signed_in? %>">
      <%= yield %>
    </main>

    <!-- Notification Container -->
    <div class="fixed top-4 right-4 z-50" data-controller="notification">
      <div class="hidden px-6 py-3 text-white bg-blue-500 rounded-lg border border-blue-400 shadow-lg"
           data-notification-target="message">
        <div class="flex justify-between items-center">
          <span data-notification-target="text"></span>
          <button data-action="click->notification#hide" class="ml-4 text-white hover:text-gray-200">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </body>
</html>
