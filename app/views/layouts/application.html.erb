<!DOCTYPE html>
<html>
  <head>
    <title>Telehealth CRM</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <!-- Flash Messages -->
    <% if notice %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4 mx-4 mt-4" role="alert">
        <span class="block sm:inline"><%= notice %></span>
      </div>
    <% end %>
    <% if alert %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 mx-4 mt-4" role="alert">
        <span class="block sm:inline"><%= alert %></span>
      </div>
    <% end %>

    <% if user_signed_in? %>
      <!-- Navigation -->
      <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4">
          <div class="flex justify-between h-16">
            <div class="flex">
              <!-- Logo -->
              <div class="flex-shrink-0 flex items-center">
                <%= link_to root_path, class: "text-xl font-bold text-gray-800" do %>
                  Telehealth CRM
                <% end %>
              </div>
              
              <!-- Navigation Links -->
              <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                <%= link_to "Dashboard", root_path, 
                    class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
                
                     <% if current_user.admin? %>
                       <%= link_to "Patients", patients_path,
                           class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
                <%= link_to "Tasks", tasks_path,
                    class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
                     <% end %>
                
                <% if current_user.patient? %>
                  <%= link_to "Messages", "#", 
                      class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
                  <%= link_to "My Tasks", "#", 
                      class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
                <% end %>
              </div>
            </div>
            
            <!-- User Menu -->
            <div class="hidden sm:ml-6 sm:flex sm:items-center">
              <div class="ml-3 relative">
                <div class="flex items-center space-x-4">
                  <span class="text-sm text-gray-700">
                    <%= current_user.email %> (<%= current_user.role.capitalize %>)
                  </span>
                  <%= link_to "Sign Out", destroy_user_session_path, 
                      method: :delete,
                      class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded text-sm" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <!-- Main Content -->
    <main class="<%= 'max-w-7xl mx-auto py-6 sm:px-6 lg:px-8' if user_signed_in? %>">
      <%= yield %>
    </main>
  </body>
</html>
