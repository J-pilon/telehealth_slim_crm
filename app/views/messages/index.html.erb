<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Messages for <%= @patient.full_name %></h1>
      <p class="text-gray-600">Medical Record #<%= @patient.medical_record_number %></p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Back to Patient", @patient, class: "btn-secondary" %>
      <% if policy(Patient).index? %>
        <%= link_to "All Patients", patients_path, class: "btn-secondary" %>
      <% end %>
    </div>
  </div>

  <!-- Message Thread -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-semibold text-gray-900">Message Thread</h3>
        <span id="message-count" class="text-sm text-gray-500">
          <%= pluralize(@messages.count, 'message') %>
        </span>
      </div>

      <!-- Messages List -->
      <div id="messages-list" class="overflow-y-auto mb-6 space-y-4 max-h-96">
        <% if @messages.any? %>
          <% @messages.each do |message| %>
            <%= render 'message', message: message %>
          <% end %>
        <% else %>
          <div class="py-8 text-center text-gray-500">
            <div class="mx-auto mb-4 w-12 h-12 text-gray-400">
              <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
            </div>
            <p>No messages yet. Start the conversation below.</p>
          </div>
        <% end %>
      </div>

      <!-- Message Form -->
      <div id="message-form">
        <%= render 'form', message: @message, patient: @patient %>
      </div>
    </div>
  </div>
</div>
