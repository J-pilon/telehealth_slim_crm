<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Edit Message</h1>
    <div class="flex space-x-3">
      <%= link_to "Back to Messages", patient_messages_path(@patient), class: "btn-secondary" %>
      <%= link_to "Back to Patient", @patient, class: "btn-secondary" %>
    </div>
  </div>

  <!-- Edit Form -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= render 'form', message: @message, patient: @patient %>
    </div>
  </div>
</div>
