<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Message Details</h1>
    <div class="flex space-x-3">
      <%= link_to "Back to Messages", patient_messages_path(@patient), class: "btn-secondary" %>
      <%= link_to "Back to Patient", @patient, class: "btn-secondary" %>
    </div>
  </div>

  <!-- Message Details -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="space-y-4">
        <div>
          <label class="form-label">Content</label>
          <p class="mt-1 text-sm text-gray-900"><%= @message.content %></p>
        </div>

        <div>
          <label class="form-label">Message Type</label>
          <p class="mt-1">
            <span class="status-badge status-<%= @message.message_type %>">
              <%= @message.message_type.capitalize %>
            </span>
          </p>
        </div>

        <div>
          <label class="form-label">From</label>
          <p class="mt-1 text-sm text-gray-900"><%= @message.sender_name %></p>
        </div>

        <div>
          <label class="form-label">Patient</label>
          <p class="mt-1 text-sm text-gray-900"><%= @message.patient.full_name %></p>
        </div>

        <div>
          <label class="form-label">Sent At</label>
          <p class="mt-1 text-sm text-gray-900"><%= @message.formatted_created_at %></p>
        </div>
      </div>

      <!-- Actions -->
      <div class="mt-6 flex space-x-3">
        <% if policy(@message).update? %>
          <%= link_to "Edit Message", edit_patient_message_path(@patient, @message), class: "btn-secondary" %>
        <% end %>
        <% if policy(@message).destroy? %>
          <%= link_to "Delete Message", patient_message_path(@patient, @message),
              method: :delete,
              data: {
                method: :delete,
                confirm: 'Are you sure?'
              },
              class: "btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
