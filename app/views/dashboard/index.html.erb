<div class="space-y-6">
  <!-- Welcome Header -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-4 py-5 sm:p-6">
      <h1 class="mb-2 text-2xl font-bold text-gray-900">
        Welcome to Telehealth CRM
      </h1>
      <p class="text-gray-600">
        Hello <%= current_user.email %>!
        You are logged in as a <%= current_user.role.capitalize %>.
      </p>
    </div>
  </div>

  <% if current_user.admin? %>
    <!-- Admin Dashboard -->
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
      <!-- Stats Cards -->
      <div class="p-6 bg-blue-50 rounded-lg border border-blue-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex justify-center items-center w-8 h-8 bg-blue-500 rounded-md">
              <span class="text-sm font-bold text-white">P</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-blue-600">Total Patients</p>
            <p class="text-2xl font-bold text-blue-900"><%= @stats[:total_patients] %></p>
          </div>
        </div>
      </div>

      <div class="p-6 bg-green-50 rounded-lg border border-green-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex justify-center items-center w-8 h-8 bg-green-500 rounded-md">
              <span class="text-sm font-bold text-white">A</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-green-600">Active Patients</p>
            <p class="text-2xl font-bold text-green-900"><%= @stats[:active_patients] %></p>
          </div>
        </div>
      </div>

      <div class="p-6 bg-yellow-50 rounded-lg border border-yellow-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex justify-center items-center w-8 h-8 bg-yellow-500 rounded-md">
              <span class="text-sm font-bold text-white">T</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-yellow-600">Pending Tasks</p>
            <p class="text-2xl font-bold text-yellow-900"><%= @stats[:pending_tasks] %></p>
          </div>
        </div>
      </div>

      <div class="p-6 bg-red-50 rounded-lg border border-red-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex justify-center items-center w-8 h-8 bg-red-500 rounded-md">
              <span class="text-sm font-bold text-white">!</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-red-600">Overdue Tasks</p>
            <p class="text-2xl font-bold text-red-900"><%= @stats[:overdue_tasks] %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
      <!-- Recent Patients -->
      <div class="bg-white rounded-lg shadow">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="mb-4 text-lg font-semibold text-gray-900">Recent Patients</h3>
          <% if @recent_patients.any? %>
            <div class="space-y-3">
              <% @recent_patients.each do |patient| %>
                <%= link_to patient_path(patient), class: "block" do %>
                  <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg transition-colors hover:bg-gray-100">
                    <div>
                      <p class="font-medium text-gray-900"><%= patient.full_name %></p>
                      <p class="text-sm text-gray-500"><%= patient.email %></p>
                    </div>
                    <span class="status-badge status-<%= patient.status %>">
                      <%= patient.status.capitalize %>
                    </span>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500">No patients yet</p>
          <% end %>
        </div>
      </div>

      <!-- Pending Tasks -->
      <div class="bg-white rounded-lg shadow">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="mb-4 text-lg font-semibold text-gray-900">Pending Tasks</h3>
          <% if @pending_tasks.any? %>
            <div class="space-y-3">
              <% @pending_tasks.each do |task| %>
                <%= link_to task_path(task), class: "block" do %>
                  <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg transition-colors hover:bg-gray-100">
                    <div>
                      <p class="font-medium text-gray-900"><%= task.title %></p>
                      <p class="text-sm text-gray-500">Due: <%= task.due_date.strftime('%b %d, %Y') %></p>
                    </div>
                    <span class="status-badge status-pending">
                      Pending
                    </span>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500">No pending tasks</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Overdue Tasks Alert -->
    <% if @overdue_tasks.any? %>
      <div class="p-6 bg-red-50 rounded-lg border border-red-200">
        <div class="flex">
          <div class="flex-shrink-0">
            <div class="flex justify-center items-center w-8 h-8 bg-red-500 rounded-md">
              <span class="text-sm font-bold text-white">!</span>
            </div>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-semibold text-red-900">Overdue Tasks</h3>
            <p class="text-red-700">You have <%= @overdue_tasks.count %> overdue tasks that need attention.</p>
            <div class="mt-2">
              <% @overdue_tasks.each do |task| %>
                <%= link_to task_path(task), class: "block text-sm text-red-600 hover:text-red-800" do %>
                  â€¢ <%= task.title %> (Due: <%= task.due_date.strftime('%b %d, %Y') %>)
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  <% else %>
    <!-- Patient Dashboard -->
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
      <!-- My Messages -->
      <div class="p-6 bg-green-50 rounded-lg border border-green-200">
        <h3 class="mb-2 text-lg font-semibold text-green-900">My Messages</h3>
        <p class="text-green-700">You have <%= @stats[:total_messages] %> messages</p>
        <div class="mt-4">
          <%= link_to "View Messages", patient_messages_path(current_user.patient), class: "btn-primary text-sm" %>
        </div>
      </div>

      <!-- My Tasks -->
      <div class="p-6 bg-yellow-50 rounded-lg border border-yellow-200">
        <h3 class="mb-2 text-lg font-semibold text-yellow-900">My Tasks</h3>
        <p class="text-yellow-700">You have <%= @stats[:pending_tasks] %> pending tasks</p>
        <div class="mt-4">
          <%= link_to "View Tasks", tasks_path(patient_id: current_user.patient.id), class: "btn-primary text-sm" %>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="p-6 bg-blue-50 rounded-lg border border-blue-200">
        <h3 class="mb-2 text-lg font-semibold text-blue-900">Quick Actions</h3>
        <div class="space-y-2">
          <%= link_to "Send Message", patient_messages_path(current_user.patient), class: "block w-full text-left text-blue-700 hover:text-blue-900 text-sm" %>
          <%= link_to "View My Profile", patient_path(current_user.patient), class: "block w-full text-left text-blue-700 hover:text-blue-900 text-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
