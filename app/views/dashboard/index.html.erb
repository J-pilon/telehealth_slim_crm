<div class="space-y-6">
  <!-- Welcome Header -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">
        Welcome to Telehealth CRM
      </h1>
      <p class="text-gray-600">
        Hello <%= current_user.email %>!
        You are logged in as a <%= current_user.role.capitalize %>.
      </p>
    </div>
  </div>

  <% if current_user.admin? %>
    <!-- Admin Dashboard -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Stats Cards -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
              <span class="text-white font-bold text-sm">P</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-blue-600">Total Patients</p>
            <p class="text-2xl font-bold text-blue-900"><%= @stats[:total_patients] %></p>
          </div>
        </div>
      </div>

      <div class="bg-green-50 border border-green-200 rounded-lg p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
              <span class="text-white font-bold text-sm">A</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-green-600">Active Patients</p>
            <p class="text-2xl font-bold text-green-900"><%= @stats[:active_patients] %></p>
          </div>
        </div>
      </div>

      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-yellow-500 rounded-md flex items-center justify-center">
              <span class="text-white font-bold text-sm">T</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-yellow-600">Pending Tasks</p>
            <p class="text-2xl font-bold text-yellow-900"><%= @stats[:pending_tasks] %></p>
          </div>
        </div>
      </div>

      <div class="bg-red-50 border border-red-200 rounded-lg p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-red-500 rounded-md flex items-center justify-center">
              <span class="text-white font-bold text-sm">!</span>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-red-600">Overdue Tasks</p>
            <p class="text-2xl font-bold text-red-900"><%= @stats[:overdue_tasks] %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Recent Patients -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Patients</h3>
          <% if @recent_patients.any? %>
            <div class="space-y-3">
              <% @recent_patients.each do |patient| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div>
                    <p class="font-medium text-gray-900"><%= patient.full_name %></p>
                    <p class="text-sm text-gray-500"><%= patient.email %></p>
                  </div>
                  <span class="status-badge status-<%= patient.status %>">
                    <%= patient.status.capitalize %>
                  </span>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500">No patients yet</p>
          <% end %>
        </div>
      </div>

      <!-- Pending Tasks -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Pending Tasks</h3>
          <% if @pending_tasks.any? %>
            <div class="space-y-3">
              <% @pending_tasks.each do |task| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div>
                    <p class="font-medium text-gray-900"><%= task.title %></p>
                    <p class="text-sm text-gray-500">Due: <%= task.due_date.strftime('%b %d, %Y') %></p>
                  </div>
                  <span class="status-badge status-pending">
                    Pending
                  </span>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500">No pending tasks</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Overdue Tasks Alert -->
    <% if @overdue_tasks.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-red-500 rounded-md flex items-center justify-center">
              <span class="text-white font-bold text-sm">!</span>
            </div>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-semibold text-red-900">Overdue Tasks</h3>
            <p class="text-red-700">You have <%= @overdue_tasks.count %> overdue tasks that need attention.</p>
            <div class="mt-2">
              <% @overdue_tasks.each do |task| %>
                <p class="text-sm text-red-600">â€¢ <%= task.title %> (Due: <%= task.due_date.strftime('%b %d, %Y') %>)</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  <% else %>
    <!-- Patient Dashboard -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- My Messages -->
      <div class="bg-green-50 border border-green-200 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-green-900 mb-2">My Messages</h3>
        <p class="text-green-700">You have <%= @stats[:total_messages] %> messages</p>
        <div class="mt-4">
          <button class="btn-primary text-sm">View Messages</button>
        </div>
      </div>

      <!-- My Tasks -->
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-yellow-900 mb-2">My Tasks</h3>
        <p class="text-yellow-700">You have <%= @stats[:pending_tasks] %> pending tasks</p>
        <div class="mt-4">
          <button class="btn-primary text-sm">View Tasks</button>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-blue-900 mb-2">Quick Actions</h3>
        <div class="space-y-2">
          <button class="w-full text-left text-blue-700 hover:text-blue-900 text-sm">
            Send Message
          </button>
          <button class="w-full text-left text-blue-700 hover:text-blue-900 text-sm">
            View My Profile
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>
