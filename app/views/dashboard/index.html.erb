<div class="bg-white shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">
      Welcome to Telehealth CRM
    </h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Welcome Card -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
        <h2 class="text-lg font-semibold text-blue-900 mb-2">Welcome!</h2>
        <p class="text-blue-700">
          Hello <%= current_user.email %>! 
          You are logged in as a <%= current_user.role.capitalize %>.
        </p>
      </div>
      
      <% if current_user.admin? %>
        <!-- Admin Stats Cards -->
        <div class="bg-green-50 border border-green-200 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-green-900 mb-2">Quick Actions</h3>
          <div class="space-y-2">
            <button class="w-full text-left text-green-700 hover:text-green-900">
              + Add New Patient
            </button>
            <button class="w-full text-left text-green-700 hover:text-green-900">
              + Create Task
            </button>
            <button class="w-full text-left text-green-700 hover:text-green-900">
              View All Patients
            </button>
          </div>
        </div>
        
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-yellow-900 mb-2">Pending Tasks</h3>
          <p class="text-yellow-700">No pending tasks</p>
        </div>
      <% else %>
        <!-- Patient Cards -->
        <div class="bg-green-50 border border-green-200 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-green-900 mb-2">My Messages</h3>
          <p class="text-green-700">No new messages</p>
        </div>
        
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-yellow-900 mb-2">My Tasks</h3>
          <p class="text-yellow-700">No pending tasks</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
