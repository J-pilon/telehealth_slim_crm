<div class="space-y-6">
  <!-- Flash Messages -->
  <div id="flash-messages">
    <%= render 'shared/flash_messages' %>
  </div>

  <!-- Header -->
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Task Queue</h1>
      <p class="text-gray-600">Manage and track your tasks</p>
    </div>
    <div class="flex space-x-3">
      <% if policy(Task).create? %>
        <%= link_to "New Task", new_task_path, class: "btn-primary" %>
      <% end %>
      <% if policy(Patient).index? %>
        <%= link_to "All Patients", patients_path, class: "btn-secondary" %>
      <% end %>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 gap-4 md:grid-cols-5">
    <div class="p-4 bg-white rounded-lg shadow">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="flex justify-center items-center w-8 h-8 bg-blue-500 rounded-full">
            <span class="text-sm font-bold text-white" id="task-count"><%= @stats[:pending_tasks] %></span>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Pending</p>
          <p class="text-lg font-semibold text-gray-900"><%= @stats[:pending_tasks] %></p>
        </div>
      </div>
    </div>

    <div class="p-4 bg-white rounded-lg shadow">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="flex justify-center items-center w-8 h-8 bg-green-500 rounded-full">
            <span class="text-sm font-bold text-white"><%= @stats[:completed_tasks] %></span>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Completed</p>
          <p class="text-lg font-semibold text-gray-900"><%= @stats[:completed_tasks] %></p>
        </div>
      </div>
    </div>

    <div class="p-4 bg-white rounded-lg shadow">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="flex justify-center items-center w-8 h-8 bg-red-500 rounded-full">
            <span class="text-sm font-bold text-white"><%= @stats[:overdue_tasks] %></span>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Overdue</p>
          <p class="text-lg font-semibold text-gray-900"><%= @stats[:overdue_tasks] %></p>
        </div>
      </div>
    </div>

    <div class="p-4 bg-white rounded-lg shadow">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="flex justify-center items-center w-8 h-8 bg-yellow-500 rounded-full">
            <span class="text-sm font-bold text-white"><%= @stats[:due_today_tasks] %></span>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Due Today</p>
          <p class="text-lg font-semibold text-gray-900"><%= @stats[:due_today_tasks] %></p>
        </div>
      </div>
    </div>

    <div class="p-4 bg-white rounded-lg shadow">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="flex justify-center items-center w-8 h-8 bg-gray-500 rounded-full">
            <span class="text-sm font-bold text-white"><%= @stats[:total_tasks] %></span>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Total</p>
          <p class="text-lg font-semibold text-gray-900"><%= @stats[:total_tasks] %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="p-4 bg-white rounded-lg shadow">
    <div class="flex flex-wrap gap-4">
      <%= link_to "All", tasks_path,
          class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-blue-100 text-blue-700' unless params[:status]}" %>
      <%= link_to "Pending", tasks_path(status: 'pending'),
          class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-yellow-100 text-yellow-700' if params[:status] == 'pending'}" %>
      <%= link_to "Completed", tasks_path(status: 'completed'),
          class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-green-100 text-green-700' if params[:status] == 'completed'}" %>
      <%= link_to "Overdue", tasks_path(status: 'overdue'),
          class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-red-100 text-red-700' if params[:status] == 'overdue'}" %>
      <%= link_to "Due Today", tasks_path(status: 'due_today'),
          class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-yellow-100 text-yellow-700' if params[:status] == 'due_today'}" %>

      <div class="flex gap-2 ml-auto">
        <%= link_to "Sort by Due Date", tasks_path(sort: 'due_date'),
            class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-blue-100 text-blue-700' if params[:sort] == 'due_date'}" %>
        <%= link_to "Sort by Recent", tasks_path(sort: 'recent'),
            class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-blue-100 text-blue-700' if params[:sort] == 'recent'}" %>
      </div>
    </div>
  </div>

  <!-- Tasks List -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-semibold text-gray-900">Tasks</h3>
        <span class="text-sm text-gray-500">
          <%= pluralize(@tasks.count, 'task') %>
        </span>
      </div>

      <div id="tasks-list" class="space-y-4">
        <% if @tasks.any? %>
          <% @tasks.each do |task| %>
            <%= render 'task', task: task %>
          <% end %>
        <% else %>
          <div class="py-8 text-center text-gray-500">
            <div class="mx-auto mb-4 w-12 h-12 text-gray-400">
              <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
              </svg>
            </div>
            <p>No tasks found</p>
            <div class="mt-4">
              <% if policy(Task).create? %>
                <%= link_to "Create New Task", new_task_path, class: "btn-primary" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @tasks.respond_to?(:current_page) && @tasks.total_pages > 1 %>
        <div class="flex justify-between items-center mt-6 border-t border-gray-200 sm:px-6">
          <%= paginate @tasks %>
        </div>
      <% end %>
    </div>
  </div>
</div>
