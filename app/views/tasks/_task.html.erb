<div id="<%= dom_id(task) %>" class="p-4 rounded-lg border border-gray-200 transition-colors hover:bg-gray-50">
  <div class="flex justify-between items-start">
    <div class="flex-1">
      <div class="flex items-center space-x-3">
        <!-- Status Checkbox -->
        <% if policy(task).complete? %>
          <div class="flex-shrink-0">
            <% if task.pending? %>
              <%= form_with url: complete_task_path(task), method: :patch, local: false, class: "inline" do |form| %>
                <%= form.submit "Mark Complete", class: "flex-shrink-0 px-3 py-1 text-sm bg-green-600 text-white rounded hover:bg-green-700" %>
              <% end %>
            <% else %>
              <%= form_with url: reopen_task_path(task), method: :patch, local: false, class: "inline" do |form| %>
                <%= form.submit "Reopen", class: "flex-shrink-0 px-3 py-1 text-sm bg-gray-600 text-white rounded hover:bg-gray-700" %>
              <% end %>
            <% end %>
          </div>
        <% end %>

        <!-- Task Content -->
        <div class="flex-1">
          <div class="flex items-center space-x-2">
            <h3 class="text-lg font-medium text-gray-900 <%= 'line-through text-gray-500' if task.completed? %>">
              <%= task.title %>
            </h3>
            <span class="status-badge status-<%= task.status %>">
              <%= task.status.capitalize %>
            </span>
            <% if task.overdue? %>
              <span class="text-red-800 bg-red-100 status-badge">
                Overdue
              </span>
            <% elsif task.due_today? %>
              <span class="text-yellow-800 bg-yellow-100 status-badge">
                Due Today
              </span>
            <% end %>
          </div>

          <% if task.description.present? %>
            <p class="mt-1 text-sm text-gray-600 <%= 'line-through' if task.completed? %>">
              <%= task.description %>
            </p>
          <% end %>

          <div class="flex items-center mt-2 space-x-4 text-sm text-gray-500">
            <div class="flex items-center">
              <svg class="mr-1 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <%= link_to task.patient.full_name, patient_path(task.patient),
                  class: "hover:text-blue-600" %>
            </div>

            <div class="flex items-center">
              <svg class="mr-1 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              Due: <%= task.due_date.strftime('%b %d, %Y') %>
            </div>

            <% if task.completed? && task.completed_at.present? %>
              <div class="flex items-center">
                <svg class="mr-1 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Completed: <%= task.completed_at.strftime('%b %d, %Y') %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center ml-4 space-x-2">
      <%= link_to "View", task_path(task), data: { "turbo-frame": "task_detail" }, class: "text-blue-600 hover:text-blue-900 text-sm" %>
      <% if policy(task).update? %>
        <%= link_to "Edit", edit_task_path(task), data: { "turbo-frame": "task_form" }, class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
      <% end %>
      <% if policy(task).destroy? %>
        <%= button_to "Delete", task_path(task),
            method: :delete,
            form: { data: { turbo_confirm: 'Are you sure?' } },
            class: "text-red-600 hover:text-red-900 text-sm" %>
      <% end %>
    </div>
  </div>
</div>
