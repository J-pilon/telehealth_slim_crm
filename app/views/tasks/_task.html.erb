<div id="task_<%= task.id %>" class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <div class="flex items-center space-x-3">
        <!-- Status Checkbox -->
        <% if policy(task).complete? %>
          <% if task.pending? %>
            <%= form_with url: complete_task_path(task), method: :patch, local: true, class: "inline" do |form| %>
              <%= form.submit "Mark Complete", 
                  data: { confirm: 'Mark this task as completed?' },
                  class: "flex-shrink-0 px-3 py-1 text-sm bg-green-600 text-white rounded hover:bg-green-700" %>
            <% end %>
          <% else %>
            <%= form_with url: reopen_task_path(task), method: :patch, local: true, class: "inline" do |form| %>
              <%= form.submit "Reopen", 
                  data: { confirm: 'Reopen this task?' },
                  class: "flex-shrink-0 px-3 py-1 text-sm bg-gray-600 text-white rounded hover:bg-gray-700" %>
            <% end %>
          <% end %>
        <% end %>

        <!-- Task Content -->
        <div class="flex-1">
          <div class="flex items-center space-x-2">
            <h3 class="text-lg font-medium text-gray-900 <%= 'line-through text-gray-500' if task.completed? %>">
              <%= task.title %>
            </h3>
            <span class="status-badge status-<%= task.status %>">
              <%= task.status.capitalize %>
            </span>
            <% if task.overdue? %>
              <span class="status-badge bg-red-100 text-red-800">
                Overdue
              </span>
            <% elsif task.due_today? %>
              <span class="status-badge bg-yellow-100 text-yellow-800">
                Due Today
              </span>
            <% end %>
          </div>
          
          <% if task.description.present? %>
            <p class="mt-1 text-sm text-gray-600 <%= 'line-through' if task.completed? %>">
              <%= task.description %>
            </p>
          <% end %>

          <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <%= link_to task.patient.full_name, patient_path(task.patient), 
                  class: "hover:text-blue-600" %>
            </div>
            
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              Due: <%= task.due_date.strftime('%b %d, %Y') %>
            </div>

            <% if task.completed? && task.completed_at.present? %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Completed: <%= task.completed_at.strftime('%b %d, %Y') %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center space-x-2 ml-4">
      <% if policy(task).show? %>
        <%= link_to "View", task_path(task), class: "text-blue-600 hover:text-blue-900 text-sm" %>
      <% end %>
      <% if policy(task).update? %>
        <%= link_to "Edit", edit_task_path(task), class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
      <% end %>
      <% if policy(task).destroy? %>
        <%= link_to "Delete", task_path(task), 
            method: :delete,
            data: { 
              method: :delete, 
              confirm: 'Are you sure?' 
            },
            class: "text-red-600 hover:text-red-900 text-sm" %>
      <% end %>
    </div>
  </div>
</div>
