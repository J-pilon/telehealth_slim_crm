<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-gray-900"><%= @patient.full_name %></h1>
      <p class="text-gray-600">Medical Record #<%= @patient.medical_record_number %></p>
    </div>
    <div class="flex space-x-3">
      <% if policy(@patient).update? %>
        <%= link_to "Edit Patient", edit_patient_path(@patient), class: "btn-secondary" %>
      <% end %>
      <% if policy(Patient).index? %>
        <%= link_to "Back to Patients", patients_path, class: "btn-secondary" %>
      <% end %>
    </div>
  </div>

  <!-- Patient Info -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="mb-4 text-lg font-semibold text-gray-900">Patient Information</h3>
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
        <div>
          <label class="form-label">First Name</label>
          <p class="mt-1 text-sm text-gray-900"><%= @patient.first_name %></p>
        </div>
        <div>
          <label class="form-label">Last Name</label>
          <p class="mt-1 text-sm text-gray-900"><%= @patient.last_name %></p>
        </div>
        <div>
          <label class="form-label">Email</label>
          <p class="mt-1 text-sm text-gray-900"><%= @patient.email %></p>
        </div>
        <div>
          <label class="form-label">Phone</label>
          <p class="mt-1 text-sm text-gray-900"><%= @patient.phone %></p>
        </div>
        <div>
          <label class="form-label">Date of Birth</label>
          <p class="mt-1 text-sm text-gray-900"><%= @patient.date_of_birth.strftime('%B %d, %Y') %></p>
        </div>
        <div>
          <label class="form-label">Age</label>
          <p class="mt-1 text-sm text-gray-900"><%= @patient.age %> years old</p>
        </div>
        <div>
          <label class="form-label">Status</label>
          <p class="mt-1">
            <span class="status-badge status-<%= @patient.status %>">
              <%= @patient.status.capitalize %>
            </span>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Messages and Tasks -->
  <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
    <!-- Recent Messages -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-semibold text-gray-900">Recent Messages</h3>
          <% if policy(Message).index? %>
            <%= link_to "View All Messages", patient_messages_path(@patient), class: "text-sm text-blue-600 hover:text-blue-900" %>
          <% end %>
        </div>
        <% if @recent_messages.any? %>
          <div class="space-y-3">
            <% @recent_messages.each do |message| %>
              <div class="p-3 bg-gray-50 rounded-lg">
                <div class="flex justify-between items-start">
                  <div class="flex-1">
                    <p class="text-sm text-gray-900"><%= message.content %></p>
                    <p class="mt-1 text-xs text-gray-500">
                      by <%= message.sender_name %> â€¢ <%= message.formatted_created_at %>
                    </p>
                  </div>
                  <span class="status-badge status-<%= message.message_type %>">
                    <%= message.message_type.capitalize %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500">No messages yet</p>
        <% end %>

        <!-- Quick Message Form -->
        <div class="pt-4 mt-4 border-t border-gray-200">
          <turbo-frame id="quick_message_form">
            <% if policy(Message).create? %>
              <%= link_to "New Message", new_patient_message_path(@patient, frame_id: "quick_message_form"), data: { "turbo-frame": "quick_message_form" }, class: "btn-primary w-full text-center" %>
            <% end %>
          </turbo-frame>
        </div>
      </div>
    </div>

    <!-- Tasks -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-semibold text-gray-900">Tasks</h3>
          <% if policy(Task).index? %>
            <%= link_to "View All Tasks", tasks_path(patient_id: @patient.id), class: "text-sm text-blue-600 hover:text-blue-900" %>
          <% end %>
        </div>

        <!-- Pending Tasks -->
        <% if @pending_tasks.any? %>
          <div class="mb-4">
            <h4 class="mb-2 text-sm font-medium text-gray-700">Pending Tasks</h4>
            <div class="space-y-2">
              <% @pending_tasks.each do |task| %>
                <div class="p-3 bg-yellow-50 rounded-lg border border-yellow-200">
                  <div class="flex justify-between items-start">
                    <div class="flex-1">
                      <p class="text-sm font-medium text-gray-900"><%= task.title %></p>
                      <p class="text-xs text-gray-500">Due: <%= task.due_date.strftime('%b %d, %Y') %></p>
                    </div>
                    <span class="status-badge status-pending">Pending</span>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Completed Tasks -->
        <% if @completed_tasks.any? %>
          <div>
            <h4 class="mb-2 text-sm font-medium text-gray-700">Recently Completed</h4>
            <div class="space-y-2">
              <% @completed_tasks.each do |task| %>
                <div class="p-3 bg-green-50 rounded-lg border border-green-200">
                  <div class="flex justify-between items-start">
                    <div class="flex-1">
                      <p class="text-sm font-medium text-gray-900"><%= task.title %></p>
                      <p class="text-xs text-gray-500">Completed: <%= task.completed_at.strftime('%b %d, %Y') %></p>
                    </div>
                    <span class="status-badge status-completed">Completed</span>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if @pending_tasks.empty? && @completed_tasks.empty? %>
          <p class="text-gray-500">No tasks yet</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
