<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Patients</h1>
    <%= link_to "Add New Patient", new_patient_path, class: "btn-primary" %>
  </div>

  <!-- Search and Filters -->
  <div class="p-4 bg-white rounded-lg shadow">
    <!-- Search -->
    <div class="mb-4" data-controller="patient-search" data-patient-search-url-value="<%= search_patients_path %>">
      <div class="relative">
        <input type="text" 
               placeholder="Search patients by name, email, or medical record number..." 
               class="pl-10 form-input"
               data-patient-search-target="input"
               data-action="input->patient-search#search keydown->patient-search#hideResults">
        <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
          <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
        <div class="flex absolute inset-y-0 right-0 items-center pr-3">
          <div class="hidden" data-patient-search-target="loading">
            <svg class="w-5 h-5 text-gray-400 animate-spin" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </div>
        </div>
      </div>
      
      <!-- Search Results -->
      <div class="hidden overflow-auto absolute z-10 mt-1 w-full max-h-60 bg-white rounded-md border border-gray-300 shadow-lg" 
           data-patient-search-target="results">
      </div>
    </div>

    <!-- Filters -->
    <div class="flex flex-wrap gap-4">
      <%= link_to "All", patients_path,
          class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-blue-100 text-blue-700' unless params[:status]}" %>
      <%= link_to "Active", patients_path(status: 'active'),
          class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-green-100 text-green-700' if params[:status] == 'active'}" %>
      <%= link_to "Inactive", patients_path(status: 'inactive'),
          class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-gray-100 text-gray-700' if params[:status] == 'inactive'}" %>

      <div class="flex gap-2 ml-auto">
        <%= link_to "Sort by Name", patients_path(sort: 'name'),
            class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-blue-100 text-blue-700' if params[:sort] == 'name'}" %>
        <%= link_to "Sort by Recent", patients_path(sort: 'recent'),
            class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-blue-100 text-blue-700' if params[:sort] == 'recent'}" %>
      </div>
    </div>
  </div>

  <!-- Patients List -->
  <div class="overflow-hidden bg-white rounded-lg shadow">
    <% if @patients.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Name</th>
              <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Email</th>
              <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Phone</th>
              <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Status</th>
              <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Tasks</th>
              <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @patients.each do |patient| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 w-10 h-10">
                      <div class="flex justify-center items-center w-10 h-10 bg-gray-300 rounded-full">
                        <span class="text-sm font-medium text-gray-700">
                          <%= patient.first_name.first %><%= patient.last_name.first %>
                        </span>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= link_to patient.full_name, patient_path(patient), class: "hover:text-blue-600" %>
                      </div>
                      <div class="text-sm text-gray-500">MR# <%= patient.medical_record_number %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap">
                  <%= patient.email %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap">
                  <%= patient.phone %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="status-badge status-<%= patient.status %>">
                    <%= patient.status.capitalize %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap">
                  <div class="flex space-x-2">
                    <span class="text-yellow-600"><%= patient.pending_tasks_count %> pending</span>
                    <span class="text-green-600"><%= patient.tasks.completed.count %> completed</span>
                  </div>
                </td>
                <td class="px-6 py-4 text-sm font-medium whitespace-nowrap">
                  <div class="flex space-x-2">
                    <%= link_to "View", patient_path(patient), class: "text-blue-600 hover:text-blue-900" %>
                    <%= link_to "Edit", edit_patient_path(patient), class: "text-indigo-600 hover:text-indigo-900" %>
                    <%= link_to "Delete", patient_path(patient), 
                        data: { 
                          method: :delete, 
                          confirm: 'Are you sure?' 
                        }, 
                        class: "text-red-600 hover:text-red-900" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <div class="flex justify-between items-center px-4 py-3 bg-white border-t border-gray-200 sm:px-6">
        <%= paginate @patients %>
      </div>
    <% else %>
      <div class="py-12 text-center">
        <div class="mx-auto w-12 h-12 text-gray-400">
          <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No patients</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new patient.</p>
        <div class="mt-6">
          <%= link_to "Add New Patient", new_patient_path, class: "btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
